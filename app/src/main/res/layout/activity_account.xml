<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".view.activity.AccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/AppTheme.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/appbarlayout"
        app:layout_constraintBottom_toTopOf="@id/save"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wallet_type"
                    android:layout_weight="3"
                    android:drawablePadding="4dp"
                    android:text="@string/type"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_baseline_payment_24px"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_shape"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:id="@+id/wallet_type_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_weight="3"
                    android:drawablePadding="4dp"
                    android:text="@string/name"
                    android:drawableStart="@drawable/ic_baseline_info_24px"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:labelFor="@id/wallet_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/wallet_name_input"
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorDefault"
                    android:background="@drawable/rounded_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wallet_current_amount"
                    android:layout_weight="3"
                    android:drawablePadding="4dp"
                    android:text="@string/Amount"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_baseline_attach_money_24px"
                    android:drawableTint="@color/colorPrimary"
                    android:labelFor="@id/wallet_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/wallet_current_amount_input"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorDefault"
                    android:background="@drawable/rounded_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="Autofill,LabelFor" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/save"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
